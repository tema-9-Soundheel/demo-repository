---
import PageLayout from "../layout/pagelayout.astro";
---

<PageLayout>
  <section class="app-section">
    <div class="content">
      <h2>Vores app</h2>
      <p>Download ved at scanne<br />QR-koden</p>

    <section class="app-section">
  <div class="content">
    <h2 class="desktop_overskrift">Vores app</h2>
    <h2 class="mobile_overskrift">Download nu</h2>
    <p id="text_download">Download ved at scanne<br>QR-koden</p>

    <div class="qr-wrapper">
      <div class="qr-item">
        <p id="desk_only">Apple</p>
        <a href="https://apps.apple.com/dk/app/soundwheel-genoplad-via-musik/id1617422124?l=da">
        <img src="public/img/appstore_billede.png" class="app_mobile" alt="app">
        </a>
        <img src="public/img/appleurl.png" class="appleqr" alt="Apple QR">
      </div>

      <div class="qr-item">
        <p id="desk_only">Google</p>
        <a href="https://play.google.com/store/apps/details?id=com.soundwheel.soundwheel">
        <img src="public/img/google_store.png" class="google_mobile" alt="google">
        </a>
        <img src="public/img/googleurl.png" class="googleqr" alt="Google QR">
      <div class="qr-wrapper">
        <div class="qr-item">
          <p>Apple</p>
          <img src="/img/appleurl.png" class="appleqr" alt="Apple QR" />
        </div>

        <div class="qr-item">
          <p>Google</p>
          <img src="/img/googleurl.png" class="googleqr" alt="Google QR" />
        </div>
      </div>
    </div>

    <div class="phone">
      <img src="/img/app.png" alt="Phone mockup" />
    </div>
  </section>
</PageLayout>
